<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/sample_achievements_rounded_block">

    <LinearLayout
        android:id="@+id/collection_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/collection_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="@string/collection_title"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/text_main"
            android:textSize="20sp"/>

        <TableLayout
            android:id="@+id/collection_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/collection_status_1_1"
                       android:contentDescription="@string/collection_image"
                       android:layout_width="23dp"
                       android:layout_height="23dp"
                       android:layout_gravity="start|center_vertical"
                       android:src="@drawable/sample_achievement_collection_circle" />

                   <ImageView
                       android:id="@+id/collection_image_1_1"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="end|center_vertical"
                       android:layout_marginStart="5dp"
                       android:contentDescription="@string/collection_image"
                       android:src="@drawable/ic_30_0_dishes_2"/>

               </LinearLayout>

               <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/collection_status_1_2"
                        android:contentDescription="@string/collection_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start|center_vertical"
                        android:src="@drawable/ic_50_0_collection_check" />

                    <ImageView
                        android:id="@+id/collection_image_1_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/collection_image"
                        android:src="@drawable/ic_30_0_animal"/>

               </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/collection_status_1_3"
                        android:contentDescription="@string/collection_image"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="start|center_vertical"
                        android:src="@drawable/sample_achievement_collection_circle"/>

                    <ImageView
                        android:id="@+id/collection_image_1_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/collection_image"
                        android:src="@drawable/ic_30_0_mask" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/collection_status_2_1"
                        android:contentDescription="@string/collection_image"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="start|center_vertical"
                        android:src="@drawable/sample_achievement_collection_circle" />

                    <ImageView
                        android:id="@+id/collection_image_2_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/collection_image"
                        android:src="@drawable/ic_30_0_weapon"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/collection_status_2_2"
                        android:contentDescription="@string/collection_image"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="start|center_vertical"
                        android:src="@drawable/sample_achievement_collection_circle" />

                    <ImageView
                        android:id="@+id/collection_image_2_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/collection_image"
                        android:src="@drawable/ic_30_0_stone_4"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/collection_status_2_3"
                        android:contentDescription="@string/collection_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start|center_vertical"
                        android:src="@drawable/ic_50_0_collection_check"/>

                    <ImageView
                        android:id="@+id/collection_image_2_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/collection_image"
                        android:src="@drawable/ic_30_0_paper" />

                </LinearLayout>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/sample_achievements_goals_day_rounded_corners_bg">

            <View
                android:id="@+id/collection_status_bar"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/sample_achievements_collections_rounded_corner_active" />

        </LinearLayout>

        <TextView
            android:id="@+id/collection_status_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@string/collection_status_number"
            android:textColor="@color/achievements_collections_status_number"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>