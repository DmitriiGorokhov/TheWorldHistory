<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TheWorldHistory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary40</item>
        <item name="android:statusBarColor">@color/main_bg</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="TitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleSectionTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SubtitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SubtitleSmallTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BodyTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BodySmallTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LinkTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/primary40</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HintTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HintSmallTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HintSmallestTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="cornerRadius">@dimen/_16sdp</item>
        <item name="backgroundTint">@color/primary40</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/main_bg</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="EditText" parent="android:Widget.Material.EditText">
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:background">@drawable/sample_edit_text_bg</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AchievementsTabs" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/inactive_text</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/primary40</item>
        <item name="colorSwitchThumbNormal">@color/surface</item>
        <item name="android:colorForeground">@color/primary_text</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="SupportChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/settings_support_primary</item>
        <item name="android:statusBarColor">@color/settings_support_primary</item>
    </style>

</resources>